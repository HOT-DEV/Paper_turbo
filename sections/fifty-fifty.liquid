<div class="container">
    <div class="fourteen columns margin-center">
        <div class="fifty-fifty--container">

            <div class="fifty-fifty--column">

              {% if section.blocks.size > 0 %}
                {% for block in section.blocks %}
                   {%if block.type =='content' %}
                   <div class="fifty-fifty--content">
                        <h4> {{ block.settings.heading }} </h4>
                        <p> {{ block.settings.content }} </p>
                    </div>
                    {% elsif block.type == 'button' %}
                    <div class="fifty-fifty--content">
                            <a href="{{block.settings.button_url}}" class="action_button first_button highlight-">
                            {{block.settings.button_label}}</a>
                    </div>
                    {% endif %}
                {% endfor %}


            {% endif %}
            </div>

            <div class="fifty-fifty--column fifty-fifty--img_container">
                <img class="fifty-fifty--img" src="{{section.settings.image | img_url: '800x' }}">
            </div>

        </div>
    </div>
</div>

{% schema %}
  {
    "name": "Fifty-Fifty",
    "class": "fifty-fifty-row",
    "max_blocks": 20,
    "settings": [
      {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "content",
        "name": "Paragraph",
        "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "Paragraph"
                }
        ]
      },
      {
          "type": "button",
          "name": "Button",
          "settings":[
              {
                  "type": "text",
                  "id": "button_label",
                  "label": "Button Label"
              },
              {
                  "type": "url",
                  "id": "button_url",
                  "label": "Button URL"
              }
          ]
      }
    ],
     "presets": [
      {
        "name": "Fifty-Fifty",
        "category": "Content",
        "blocks": [
          {
            "type": "content"
          },
          {
            "type": "button"
          }
        ]
      }
    ]
  }
{% endschema %}
