{% comment %}
** Article (blog post) - default view **
- Template section
- Uses blocks
{% endcomment %}

{% if article.image and section.settings.banner_enabled %}
  <header class="banner center page_banner dark-overlay-{{section.settings.image_darken}}">
    {% include 'image-element', image: article.image, alt: article.image.alt, stretch_width: true %}
  </header>
{% endif %}

<a name="pagecontent" id="pagecontent"></a>

<div class="container main content">
{% paginate article.comments by 100 %}

  {% comment %}Check to see if sidebar should be enabled{% endcomment %}
  {% if section.blocks.size > 0 %}
    {% assign sidebar = true %}
  {% else %}
    {% assign sidebar = false %}
  {% endif %}

  <div class="ten columns {% if sidebar == false %}offset-by-two{% endif %} medium-down--one-whole equal-columns--outside-trim">
    <div class="section clearfix">
      <div class="clearfix breadcrumb">
        {% if section.settings.blog_breadcrumb %}
          <div class="breadcrumb_text left" itemscope itemtype="http://schema.org/BreadcrumbList">
            <span itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><a href="{{ shop.url }}" title="{{ shop.name | escape }}" itemprop="item"><span itemprop="name">{{ 'general.breadcrumbs.home' | t }}</span></a><meta itemprop="position" content="1" /></span>
            &nbsp;<span class="icon-slash">/</span>
            <span itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><a href="{{ blog.url }}" title="{{ blog.title | escape }}" itemprop="item"><span itemprop="name">{{ blog.title }}</span></a><meta itemprop="position" content="2" /></span>
          </div>
        {% endif %}
        {% if section.settings.blog_pagination %}
          <div class="article-pagination right">
            {% if blog.next_article %}
              {{ 'blogs.article.previous_article_html' | t | link_to: blog.next_article }}
            {% endif %}
            {% if blog.previous_article and blog.next_article %}
              &nbsp;<span class="icon-slash">/</span>
            {% endif %}
            {% if blog.previous_article %}
              {{ 'blogs.article.next_article_html' | t | link_to: blog.previous_article }}
            {% endif %}
          </div>
        {% endif %}
      </div>

        <h1 class="align_left article_title">
          {{ article.title }}
        </h1>


        <p class="blog_meta">
          {% if section.settings.blog_author %}
            <span>{{ 'blogs.article.by_author' | t: author: article.author }}</span>
          {% endif %}

          {% if section.settings.blog_date %}
            <span>{{ article.published_at | date: format: "month_day_year" }}</span>
          {% endif %}

          {% if section.settings.read_time %}
            {% include 'include-read-time' %}
          {% endif %}

          {% if section.settings.blog_tags %}
            <div class="blog_meta tags">
              {% for tag in article.tags %}
                <span><a href="{{ shop.url}}/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}" title="{{ blog.title }} {{ 'blogs.general.tagged' | t }} {{ tag | escape }}">{{ tag }}</a></span>
              {% endfor %}
            </div>
          {% endif %}

          {% if section.settings.blog_comment_count %}
            {% if settings.disqus_enabled %}
              <span>
                <a href="{{ article.url }}#disqus_thread" data-disqus-identifier="{{ article.id }}" class="disqus-comment-count">{{ 'blogs.counts.comments_with_count' | t: count: 0 }}</a>
              </span>
            {% elsif article.comments_enabled? and article.comments_count > 0 %}
              <span>
                <a href="{{ article.url }}#comments">{{ 'blogs.counts.comments_with_count' | t: count: article.comments_count }}</a>
              </span>
            {% endif %}
          {% endif %}
        </p>

        <div class="article_content clearfix">
          {% if article.image and section.settings.banner_enabled == false %}
            <p>
              {% include 'image-element', image: article.image, alt: article.image.alt %}
            </p>
          {% endif %}
          {{ article.content }}
        </div>

        <div class="author_share_wrap">
          {% if section.settings.display_social_buttons %}
            <div class="blog_share meta">
              {% include "social-buttons" with "article" %}
            </div>
          {% endif %}
        </div><!--end author_share_wrap-->

    </div>
  </div>

  {% include "blog-sidebar", blog_handle: blog.handle %}
{% endpaginate %}

  <div class="sixteen columns">
  
      {% if section.settings.blog_additional_posts and blog.articles_count > 1 %}
      <div class="section clearfix">
        <h3 class="related-posts-title">{{ 'blogs.article.additional_articles' | t: title: blog.title }}</h3>

        {% assign article_found = false %}
        {% for a in blog.articles limit: 4 %}
          {% assign skip_article = false %}
          {% if article_found == false and forloop.last %}
            {% assign skip_article = true %}
          {% endif %}
          {% if article.id == a.id %}
            {% assign article_found = true %}
            {% assign skip_article = true %}
          {% endif %}
          {% unless skip_article %}
            <div class="five columns article related-post">
              {% if a.image %}
                <a href="{{ a.url }}" title="{{ a.title | escape }}">
                  {% include 'image-element', image: a.image, alt: a.image.alt %}
                </a>
              {% endif %}



              <h5 class="sub_title">
                <a href="{{ a.url }}" title="{{ a.title | escape }}">{{ a.title }}</a>
              </h5>
              <p class="blog_meta">
                {% if section.settings.blog_author %}
                  <span>{{ 'blogs.article.by_author' | t: author: a.author }}</span>
                {% endif %}

                {% if section.settings.blog_date %}
                  <span>{{ a.published_at | date: format: "month_day_year" }}</span>
                {% endif %}

                {% if section.settings.read_time %}
                  {% include 'include-read-time', article: a %}
                {% endif %}

                {% if settings.disqus_enabled %}
                  <span>
                    <a href="{{ a.url }}#disqus_thread" data-disqus-identifier="{{ a.id }}" class="disqus-comment-count">{{ 'blogs.counts.comments_with_count' | t: count: 0 }}</a>
                  </span>
                {% elsif section.settings.blog_comment_count and a.comments_count > 0 %}
                  <span>
                    <a href="{{ a.url }}#comments">{{ 'blogs.counts.comments_with_count' | t: count: a.comments_count }}</a>
                  </span>
                {% endif %}
              </p>
              {% if section.settings.blog_tags %}
                <div class="blog_meta tags">
                  {% for tag in a.tags %}
                    <span><a href="{{ shop.url}}/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}" title="{{ blog.title | escape }} {{ 'blogs.general.tagged' | t }} {{ tag | escape }}">{{ tag }}</a></span>
                  {% endfor %}
                </div>
              {% endif %}

              {% if a.excerpt != blank %}
                <div class="excerpt">{{ a.excerpt }}</div>
              {% endif %}
              {% if section.settings.read_more_link %}
                <h6 class="read-more-link"><a href="{{ a.url }}" title="{{ a.title | escape }}">{{ 'blogs.general.continue_reading_html' | t }}</a></h6>
              {% endif %}
            </div>
          {% endunless %}
        {% endfor %}
      </div>
    {% endif %}
  
  </div>
</div>

{% schema %}

{
  "name": "Blog post",
  "class": "blog-post-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "banner_enabled",
      "label": "Enable blog post banner image",
      "info": "The blog post's featured image will be used as a full-width banner",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "image_darken",
      "label": "Darken banner image",
      "default": false
    },
    {
     "type": "checkbox",
     "id": "blog_breadcrumb",
     "label": "Show breadcrumbs",
     "default": true
    },
    {
     "type": "checkbox",
     "id": "blog_pagination",
     "label": "Show next blog post link",
     "default": true
    },
    {
     "type": "checkbox",
     "id": "blog_tags",
     "label": "Show blog post tags"
    },
    {
     "type": "checkbox",
     "id": "blog_author",
     "label": "Show author"
    },
    {
      "type": "checkbox",
      "id": "read_time",
      "label": "Show estimated read time",
      "default": true
    },
    {
     "type": "checkbox",
     "id": "blog_date",
     "label": "Show date",
     "default": true
    },
    {
      "type": "checkbox",
      "id": "display_social_buttons",
      "label": "Show social media share icons",
      "default": true
    },
    {
     "type": "checkbox",
     "id": "blog_comment_count",
     "label": "Show comment count",
     "default": true
    },
    {
      "type": "header",
      "content": "Related blog posts"
    },
    {
     "type": "checkbox",
     "id": "blog_additional_posts",
     "label": "Show related blog posts",
     "default": false
    },
    {
     "type": "checkbox",
     "id": "read_more_link",
     "label": "Show continue reading link",
     "default": true
    },
    {
     "type": "header",
     "content": "Sidebar"
    },
    {
      "type": "paragraph",
      "content": "Create a sidebar by adding content blocks."
    },
    {
      "type": "checkbox",
      "id": "toggle",
      "label": "Toggle sidebar content",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "post_tags",
      "name": "Blog post tags",
      "limit": 1
    },
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "link_list",
          "id": "custom_menu_linklist",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter sign up form",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "newsletter_title",
          "label": "Heading",
          "default": "Subscribe"
        },
        {
          "type": "richtext",
          "id": "newsletter_text",
          "label": "Subheading",
          "default": "<p>Sign up to get the latest on sales, new releases and more â€¦</p>"
        }
      ]
    },
    {
      "type": "page",
      "name": "Page",
      "settings": [
        {
          "type": "page",
          "id": "content_page",
          "label": "Page"
        }
      ]
    },
    {
      "type": "recent_posts",
      "name": "Recent blog posts",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "blog_post_count",
          "label": "Display blog posts",
          "options": [
            {
              "value": "2",
              "label": "2"
            },
            {
              "value": "5",
              "label": "5"
            },
            {
              "value": "10",
              "label": "10"
            }
          ],
          "default": "10"
        }
      ]
    },
    {
      "type": "search",
      "name": "Search form",
      "limit": 1
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Text area can be used for details about blog authors or general information.</p>"
        }
      ]
    }
  ]
}

{% endschema %}