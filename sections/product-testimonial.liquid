{% comment %}
** Testimonial - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}

{% if section.settings.wide_display == false %}
<div class="container">
  <div class="sixteen columns">
{% endif %}

{% if section.blocks.size > 0 %}
  <div  id="testimonial-{{section.id}}"
        class="testimonial-slideshow js-testimonial
        transparentBackground--{{settings.slideshow_button_style}}
        full-width--{{ section.settings.wide_display }}"
        data-slider-id="testimonial-{{section.id}}"
        data-slideshow-speed="{{section.settings.testimonial_speed}}"
        data-slideshow-text-animation="{{section.settings.testimonial_text_animation}}"
       	style="background:{{ section.settings.bg_color }};"
        >
    {% for block in section.blocks %}
        <div class="testimonial-block gallery-cell slide-{{ forloop.index }} {% if block.settings.image == nil %}set-static use-mobile-color{% endif %}" {{ block.shopify_attributes }} data-block-id="{{block.id}}">
            {% assign image = block.settings.image %}
            
            <div class="testimonial-caption position-{{block.settings.text_position}} js-caption {% unless block.settings.enable_image == false %}no-white-bg{% endunless %}">
                <div class="caption-content testimonial-text align-{{block.settings.text_align}}">
                  {% if block.settings.title != blank %}
                    <p class="headline">
                      {{ block.settings.title }}
                    </p>
                  {% endif %}
                  <div class="subtitle">
                    {{ block.settings.testimonial }}
                    <p>
                      {% if block.settings.name != blank %}
                      <span class="customer-name">{{ block.settings.name }}</span>
                      {% endif %}
                      {% if block.settings.store_name != blank %}
                      <span class="or-seperator">,</span>	
                        {% if block.settings.link != blank %}<a href="{{ block.settings.link }}">{% endif %}
                          <span class="company-name">{{ block.settings.store_name }}</span>
                        {% if block.settings.link != blank %}</a>{% endif %}
                      {% endif %}
                    </p>
                  </div>
                </div>
              </div>

        </div>
    {% endfor %}
  </div>
{% endif %}

{% if section.settings.wide_display == false %}
  </div>
</div>
{% endif %}

{% schema %}

{
  "name": "Testimonials",
  "class": "testimonial-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "wide_display",
      "label": "Wide display",
      "default": true
    },
	{
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
      "type": "range",
      "id": "testimonial_speed",
      "label": "Change testimonials every",
      "min": 0,
      "max": 12,
      "step": 1,
      "default": 6,
      "unit": "sec"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Testimonial title",
          "default": "Customer Testimonial"
        },
        {
          "type": "richtext",
          "id": "testimonial",
          "label": "Testimonial",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam quam enim, fringilla ut purus ut, pretium ullamcorper sem. In sit amet vestibulum tellus. Aenean gravida dolor eget mi bibendum semper. </p>"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer name"
        },
        {
          "type": "text",
          "id": "store_name",
          "label": "Company name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Company link"
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "category": "Text",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}

{% endschema %}
