{% comment %}
** Mega menu - homepage partial **
- Static section
- Uses blocks
- Must be enabled through general settings
{% endcomment %}

{% if section.blocks.size > 0 %}
  <div class="dropdown_container mega-menu mega-menu-1" data-dropdown="{{ section.settings.parent | handleize }}">
    <div class="dropdown menu">
      <div class="dropdown_content {% if section.blocks < 4 %}dropdown_narrow{% endif %}">
        {% for block in section.blocks %}
          <div class="dropdown_column" {{ block.shopify_attributes }}>
            {% if block.type == 'column' %}

              {% comment %}Image with caption and link{% endcomment %}
              {% if block.settings.image_top != nil or block.settings.image_caption_top != blank %}
                <div class="mega-menu__image-caption-link">
                  <a {% if block.settings.image_link_top != blank %}href="{{ block.settings.image_link_top }}"{% endif %} >
                    {% if block.settings.image_top != nil %}
                      <img  src="{{ block.settings.image_top | img_url: 'x130' }}"
                            alt="{{ block.settings.image_top.alt | escape }}"
                            class="lazyload {{ settings.image_loading_style }}"
                             />
                    {% endif %}
                    <div class="mega-menu__description">

                      {% if block.settings.header != nil %}
                        <h6 class="title">{{ block.settings.header }}</h6>
                      {% endif %}

                      {% if block.settings.description !=nil %}
                        <p> {{ block.settings.description }} </p>
                      {% endif %}

                    </div>
                  </a>
                </div>

              {% endif %}
            {% endif %}
          </div>
        {% endfor %}

        {% if section.settings.industry_menu %}
        	{% if section.settings.industry_menu != blank %}

            <div class="industry_menu">

              {% if section.settings.industry_menu != blank %}
                <p class="title">Shop by Industry</p>
              {% endif %}

            <ul>
              {% for sublink in linklists[section.settings.industry_menu].links %}
                  <li>
                    <a href="{{ sublink.url }}">{{ sublink.title }}</a>
                  </li>
              {% endfor %}
            </ul>

            </div>
			{% endif %}
        {% endif %}

      </div>
    </div>
  </div>

  <ul class="mobile-mega-menu hidden" data-mobile-dropdown="{{ section.settings.parent | handleize }}">
          {% for block in section.blocks %}
          <div class="dropdown_column" {{ block.shopify_attributes }}>
            {% if block.type == 'column' %}

              {% comment %}Image with caption and link{% endcomment %}
              {% if block.settings.image_top != nil or block.settings.image_caption_top != blank %}
                <div class="mega-menu__image-caption-link">
                  <a {% if block.settings.image_link_top != blank %}href="{{ block.settings.image_link_top }}"{% endif %} >
                    {% if block.settings.image_top != nil %}
                      <img  src="{{ block.settings.image_top | img_url: '130x' }}"
                            alt="{{ block.settings.image_top.alt | escape }}"
                            class="lazyload {{ settings.image_loading_style }}"
                             />
                    {% endif %}
                    <div class="mega-menu__description">

                      {% if block.settings.header != nil %}
                        <h6 class="title">{{ block.settings.header }}</h6>
                      {% endif %}

                      {% if block.settings.description !=nil %}
                        <p> {{ block.settings.description }} </p>
                      {% endif %}

                    </div>
                  </a>
                </div>

              {% endif %}
            {% endif %}
          </div>
        {% endfor %}

        {% if section.settings.industry_menu %}
			{% if section.settings.industry_menu != blank %}
          <div class="industry_menu">
             {% if section.settings.industry_menu != blank %}
              <p class="title">Shop by Industry</p>
            {% endif %}

          <ul>
            {% for sublink in linklists[section.settings.industry_menu].links %}
                <li>
                  <a href="{{ sublink.url }}">{{ sublink.title }}</a>
                </li>
            {% endfor %}
          </ul>

          </div>
			{% endif %}
        {% endif %}
  </ul>
{% endif %}

{% schema %}

{
  "name": "Mega menu 2",
  "class": "mega-menu-section",
  "max_blocks": 5,
  "settings": [
    {
      "type": "text",
      "id": "parent",
      "label": "Link title",
      "info": "The mega menu will appear below this parent link"
    },
    {
      "type": "link_list",
      "id": "industry_menu",
      "label": "Industry Menu"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "url",
          "id": "image_link_top",
          "label": "Image link"
        },
        {
          "type": "image_picker",
          "id": "image_top",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "header",
          "label": "Header"
        },
        {
          "type": "html",
          "id": "description",
          "label": "Description",
		  "default": "<div><p>Some HTML content</p></div>"
        }
      ]
    }
  ],
  "default": {
    "blocks": [

    ]
  }
}

{% endschema %}