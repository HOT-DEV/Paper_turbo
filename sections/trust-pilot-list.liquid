<div class="container-full-width">
  <div class="video-wrapper-column">
    <div class="videoWrapper">
      {% if section.settings.video != blank %}
      <video width="400" controls{% if section.settings.image != blank %} poster="{{ section.settings.image | img_url:"master" }}"{% endif %}>
        <source src="{{ section.settings.video }}" type="video/mp4">
        Your browser does not support HTML5 video.
      </video>
      {% endif %}
    </div>
  </div>
  <div class="trust-review">
    <div class="paper-tube-list-container">
      <!-- TrustBox widget - List -->
      <div id="trustbox" class="trustpilot-widget" data-locale="en-US" data-template-id="539ad60defb9600b94d7df2c" data-businessunit-id="531dbb3a0000640005785c93" data-style-height="500px" data-style-width="100%" data-theme="light" data-stars="4,5">
        <a href="https://www.trustpilot.com/review/www.papertube.co" target="_blank" rel="noopener">Trustpilot</a>
      </div>
      <!-- End TrustBox widget -->
    </div>
  </div>
</div>
<style>
  {% if section.settings.image != blank %}
    .videoWrapper {
      background: #ccc url({{ section.settings.image | img_url:"master" }});
      background-size: 100%;
    }
  {% endif %}
</style>

{% schema %}
  {
    "name": "Trust Pilot Review",
    "class": "trust-pilot-row",
    "settings": [
      {
        "type":"textarea",
        "id": "video",
        "label": "mp4 video link",
        "info": "Upload video on [Files settings page](https://paper-tube-co.myshopify.com/admin/settings/files) and then paste the URL above."
      },
      {
        "type":"image_picker",
        "id": "image",
        "label": "Video poster"
      }
    ],
    "presets": [
      {
        "name": "Trust Pilot List",
        "category": "Content"
      }
    ]
  }
{% endschema %}
