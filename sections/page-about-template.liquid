{% comment %}
** Details page - custom view **
- Page template
- Uses blocks
{% endcomment %}

<a name="pagecontent" id="pagecontent"></a>

<div class="detail-sections">

{% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
    {%- assign mod_block = block.settings -%}

    <div {{ block.shopify_attributes }} class="block__{{ block.type }} block__{{ block.id }}
      {% if block.type == "image_with_text_overlay" and mod_block.wide_display %}
        under-menu
      {% elsif block.type == "featured_video" and mod_block.wide_display %}
        under-menu
      {% elsif block.type == "featured_collection" %}
        featured-collection-section
      {% endif %}
    ">

      {% if block.type == "blog_posts" %}
        <!-- Blog posts -->
        {% include 'include-featured-blog', type: 'block' %}

      {% elsif block.type == "quote-paragraph" %}
         {% include 'include-quote-paragraph', type: 'block' %}

      {% elsif block.type == "two-quote-paragraph" %}
         {% include 'include-two-quote-paragraph', type: 'block' %}

      {% elsif block.type=="large-image" %}
         {% include 'include-large-image', type: 'block' %}

      {% elsif block.type=="product-gallery" %}
            {% include 'include-product-gallery', type: 'block' %}

      {% elsif block.type == "contact_form" %}
        <!-- Contact form -->
        {% include 'include-contact-form', type: 'block' %}

      {% elsif block.type == "featured_video" %}
        <!-- Featured video -->
        {% include 'include-video', type: 'block' %}
      {% elsif block.type == "instagram" %}
        <!-- Instagram -->

        <div class="container social-feeds-wrap">
          <div class="section clearfix homepage_content">
            <div class="block__{{ block.type }} sixteen columns equal-columns--outside-trim" {{ block.shopify_attributes }}>
              <h2 class="title insta center">
                <a href="{{ mod_block.instagram_link }}" target="_blank">
                  <h2>{{ mod_block.instagram_title}}</h2>
                </a>
              </h2>

              {% if mod_block.instagram_client_id != blank %}
                <div id="instafeed" class="js-instafeed" data-client-id="{{ mod_block.instagram_client_id | strip }}" data-count="{{ mod_block.instagram_count }}" data-column="{% if blockLength > 1 %}eight{% else %}four{% endif %}"></div>
              {% else %}
                <div id="instafeed" class="clearfix placeholder-instagram">
                  {% for i in (1..mod_block.instagram_count) %}
                    <div class="eight columns instagram__item small-down--one-whole">
                      <a href="#" class="instagram__link">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder-svg--instagram' }}
                      </a>
                    </div>
                  {% endfor %}
                </div>
              {% endif %}

              <a href="{{mod_block.instagram_url}}" class="action_button" target="_blank" >{{mod_block.instagram_label}}</a>
            </div>
          </div>
        </div>
      {% elsif block.type == 'image_gallery' %}
        <!-- Image gallery -->
        {% include 'include-gallery', type: 'block' %}

      {% elsif block.type == "image_with_text" %}
        <!-- Image with text -->
        {% if mod_block.layout == false %}
          <div class="container standard--width">
        {% endif %}
        <div class="image-with-text
          featured_collections
          clearfix across-1 image-align--{{ mod_block.frontpage_image_position }}">
          <section class="featured-link--section featured-link--image section-{{ forloop.index }}{% if mod_block.video != blank %} featured-link-with-video{% endif %}">
            <div class="featured-link--half featured-link--image {% if mod_block.layout == false %}featured-link--margin{% endif %} image-crop--{{ mod_block.image_crop }}">
              <div class="featured-link--wrap">
                <a {% if mod_block.link != blank %}href="{{ mod_block.link }}"{% endif %}
                  title="{{ mod_block.title }}"
                  {% if mod_block.video != blank and mod_block.image != blank %}
                    style="
                      background: #ccc url({{ mod_block.image | img_url:"master" }});
                      background-size: cover;
                      background-position: center;
                    "
                  {% endif %}
                >
                  {% if mod_block.video != blank %}
                    <video width="400" controls>
                      <source src="{{ mod_block.video }}" type="video/mp4">
                      Your browser does not support HTML5 video.
                    </video>
                  {% elsif mod_block.image %}
                    {% include 'image-element', image: mod_block.image, alt: mod_block.image.alt,  stretch_width: true %}
                  {% else %}
                    {% capture i %}{% cycle "1", "2", "3", "4", "5", "6" %}{% endcapture %}
                    {{ 'collection-' | append: i | placeholder_svg_tag: 'placeholder-svg placeholder-svg--promotions' }}
                  {% endif %}
                </a>
              </div>
            </div>
            <div class="featured-link--half">
              <div class="info text-align--{{mod_block.frontpage_text_align}}">
                <a {% if mod_block.link != blank %}href="{{ mod_block.link }}"{% endif %} class="collection_title title_{{mod_block.title_size}}">
                  {{ mod_block.title }}
                </a>
                {% if mod_block.text != blank %}
                  <div class="description">{{ mod_block.text }}</div>
                {% endif %}
                {% if mod_block.button_label != blank %}
                  <a {% if mod_block.link != blank %}href="{{ mod_block.link }}"{% endif %} class="button">
                    {{ mod_block.button_label }}
                  </a>
                {% endif %}
              </div>
            </div>
          </section>
        </div>
        {% if mod_block.layout == false %}
          </div>
        {% endif %}

        {% if mod_block.layout == false %}
          <style>
            #shopify-section-{{ section.id }} .featured-link--section {
              margin-bottom: 3%;
            }
            @media only screen and (max-width: 480px) {
              #shopify-section-{{ section.id }} .featured-link--section {
                margin-bottom: 10%;
              }
            }

            .standard--width .featured-link--margin {
              margin-left: 0%;
              margin-right: 3%;
            }

            .standard--width .image-align--right .featured-link--margin {
              margin-left: 3%;
              margin-right: 0%;
            }

            .standard--width .featured-link--half {
              width: 45%;
            }
          </style>
        {% endif %}

      {% elsif block.type == 'map' %}
        <!-- Map -->
        {% include 'include-map', type: 'block' %}

      {% elsif block.type == "page" %}
        <!-- Page -->
        {% include 'include-content-page', type: 'block' %}

      {% elsif block.type == 'quote' %}
        <!-- Quote -->
        {% include 'include-quote', type: 'block' %}

      {% elsif block.type == "rich_text_and_image" %}
