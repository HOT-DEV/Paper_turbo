
{% if type =='block' %}
    {% assign heading = block.settings.heading %}
    {% assign intro = block.settings.intro %}
    {% assign image_one = block.settings.image_one %}
    {% assign image_two = block.settings.image_two %}
    {% assign image_three = block.settings.image_three %}
{% endif %}

<div class="product-gallery-section">
    <div class="container">
        <div class="product-gallery-content-container">
            <h3> {{heading}} </h3>
            <p> {{intro}} </p>
        </div>
        <div class="product-gallery-container">
            <div class="one-third column">
                {% include 'image-element', image: image_one, alt: image.alt %}
            </div>
            <div class="one-third column">
                {% include 'image-element', image: image_two, alt: image.alt %}
            </div>
            <div class="one-third column">
                {% include 'image-element', image: image_three, alt: image.alt %}
            </div>
        </div>
    </div>
</div>